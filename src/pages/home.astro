---
let theme:any = Astro.cookies.get("theme").value || "system"
let user:App.User = null

if (!Astro.cookies.has("user id")) {
  return Astro.redirect("/")
}
---
<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta charset="utf-8"/>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Home / Peda</title>
  </head>
  <body data-theme={theme}>
    <main>
        <h2>Welcome to Peda</h2>
        <a href="/logout">Logout</a>
    </main>
  </body>
</html>
<style lang="less">
    html,
    body {
        padding: 0 0 0 0;
        margin: 0 0 0 0;
    }
    body {
        background-color: #F5F4F4;
        &[data-theme="dark"] {
            background-color: #2F2F2F;
            main h2, 
            main a {
                color: white
            }
        } 
        &[data-theme="system"] {
            @media screen and (prefers-color-scheme: dark) {
                background-color: #2F2F2F;
                main h2, 
                main a {
                    color: white
                }
            }
        }
        main {
            width: 100%;
            height: 100%;
            position: absolute;
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            color: white;
            font-family: Arial, Helvetica, sans-serif;
            a {
                color: rgb(20, 20, 20);
                text-decoration: none;
                &:hover {
                    text-decoration: underline;
                }
            }
        }
    }
</style>